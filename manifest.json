{
  "manifest_version": 3,
  "name": "LinkedIn People Scraper",
  "version": "1.1",
  "description": "Scrapes Name, Role, and URL from the LinkedIn People tab.",
  "permissions": ["activeTab", "scripting", "commands"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "run-scrape": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Scrape LinkedIn People"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}